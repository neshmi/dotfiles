[user]
	name = Nathan Anderson
	email = andnat@gmail.com
[core]
	excludesfile = /Users/nathan/.gitignore
[format]
  pretty = %Cblue%h%Creset %Cgreen[%ar]%Creset (%an) %s
[alias]
  c = commit -m
  a = !git add -u && git add . && git status -s
  cbr = checkout -b
  di = diff
  dic = diff --cached
  pl = pull
  ps = push
  plre = pull --rebase
  st = status -s
  graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  ci = commit
  ca = commit --amend
  pr = remote prune origin
	up = "!git remote update -p; git merge --ff-only @{u}"
  rbc = rebase --continue
  rbi = rebase -i
  mm = !test `git rev-parse master` = $(git merge-base HEAD master) && git checkout master && git merge HEAD@{1} || echo "Non-fastforward"
  ap = commit --amend -C HEAD
  co = checkout
  adi = !git add -u && git add . && git diff --cached
  br = branch
  dc = diff --cached
  ours = checkout --ours
  theirs = checkout --theirs
  pp = !git plre && git push
  cp = cherry-pick
  lp = log -p
  ls = log --stat
  lsp = log -p --stat
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  graphy = log --graph --pretty=format:'%h %d' --abbrev-commit --date=relative
  vim = !vim .git/index
[rerere]
  enabled = 1
[credential]
	helper = osxkeychain
[push]
	default = matching
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[branch]
	autosetuprebase = always
